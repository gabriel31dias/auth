<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title">Bem-vindo</h1>

          <% if current_user %>
            <p class="card-text">Logado com sucesso!</p>
            <%= link_to 'Deslogar', logout_path, method: :delete, class: "btn btn-danger" %>
          <% else %>
            <p class="card-text">Você não está logado.</p>
            <%= link_to 'Login', login_path, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
